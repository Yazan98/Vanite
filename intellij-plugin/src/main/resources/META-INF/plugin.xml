<idea-plugin>
    <id>io.vanite.intellij.plugin.intellij-generator</id>
    <name>Vortex ICG</name>
    <vendor email="yazantarifi1@hotmail.com" url="http://www.yazan98.io/projects/vortex">Vortex</vendor>

    <description><![CDATA[
    <em>Vortex Intellij Code Generator</em>
    Build Android Applications With Vortex Implementation
    Depends on Latest Technologies in Android Platform
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="Vortex.About" text="Vortex" description="Generate android applications">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.FragmentGenerator" text="Generate Fragment"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.ScreenGenerator" text="Generate Screen"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.DialogGenerator" text="Generate Dialog"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.ReducerGenerator" text="Generate Reducer"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.CrudGenerator" text="Generate Crud Repository"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.SharedPrefsGenerator" text="Generate SharedPrefs"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.LocalDatabaseGenerator" text="Generate Local Database"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.GradleGenerator" text="Generate Gradle Configuration"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.TripGenerator" text="Application Flow"/>
            <action class="io.vanite.intellij.plugin.actions.AboutPluginAction" id="Vortex.About.Action.AboutGenerator" text="About"/>
        </group>
    </actions>
</idea-plugin>